<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Fragments.NosotrosFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/unum_app"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

        <com.codesgood.views.JustifiedTextView
            android:textColor="#000"
            android:id="@+id/descripcion1Anno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/DescripcionN"
            android:textSize="15sp" />

        <com.codesgood.views.JustifiedTextView
            android:textColor="#000"
            android:id="@+id/descripcion1Anno2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/Desarrolladores"
            android:textSize="15sp" />

        <com.codesgood.views.JustifiedTextView
            android:textColor="#7f052a"
            android:id="@+id/descripcion1Anno3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="Nuestras redes sociales"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/facebook"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/twitter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/twitter"
            android:layout_marginTop="-50dp"
            android:layout_marginRight="50dp"
            android:layout_gravity="center"/>


    </LinearLayout>



</FrameLayout>